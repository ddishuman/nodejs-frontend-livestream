doctype html
html
  head
    meta( charset="UTF-8" )
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title= title
    style.
      body, html {
        height: 100%;
        margin: 0;
        font: 400 15px/1.8 "Lato", sans-serif;
        color: #777;
      }
      .bgimg-1 {
        position: relative;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
      }
      .bgimg-1 {
        background-image: url(https://tainan-metaverse.s3.ap-northeast-1.amazonaws.com/web/img/main-header-bg.png);
        height: 15%;
        width: 100%;
      }
      .video-container {
        position: relative;
        padding-bottom: 56.25%;
        padding-top: 30px;
        height: 0;
        overflow: hidden;
      }
      .video-container iframe, .video-container object, .video-container embed {
        position: absolute;
        top: 0;left: 0;
        width: 100%;
        height: 100%;
        display: inline
      }   
      #live {
        width: 80%;
        height: 100%;
        display:inline-block;
      }
      #live-chat {
        width: 20%;
        height: 100%;
        display:inline-block;
      }

  body
    head
      .bgimg-1
    main
      if isMobile
        .video-container
          iframe(type="text/html" width="960" height="600" frameborder="0" allowfullscreen
            src="https://www.youtube.com/embed/4UOEsOPFYOU?autoplay=1"
          )

        iframe(
          width='300'
          height='600'
          src="https://www.youtube.com/live_chat?v=4UOEsOPFYOU&embed_domain=tainanverse-live.ap-northeast-1.elasticbeanstalk.com"
        )
      else 
        div#live.video-container
          iframe(type="text/html" width="960" height="600" frameborder="0" allowfullscreen
            src="https://www.youtube.com/embed/4UOEsOPFYOU?autoplay=1"
          )
        div#live-chat.video-container
          iframe(
            width='250'
            height='600'
            src="https://www.youtube.com/live_chat?v=4UOEsOPFYOU&embed_domain=tainanverse-live.ap-northeast-1.elasticbeanstalk.com"
          )




