doctype html
html
  head
    meta( charset="UTF-8" )
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title= title
    style.
      body, html {
        height: 100%;
        margin: 0;
        font: 400 15px/1.8 "Lato", sans-serif;
        color: #777;
      }
      .bgimg-1, .bgimg-2 {
        position: relative;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
      }
      .bgimg-1 {
        background-image: url(https://tainan-metaverse.s3.ap-northeast-1.amazonaws.com/web/img/main-header-bg.png);
        height: 15%;
        width: 100%;
      }
      .bgimg-2 {
        background-image: url(https://tainan-metaverse.s3.ap-northeast-1.amazonaws.com/web/img/mobile-header.png);
        height: 10%;
        width: 100%;
      }
      .video-container {
        position: relative;
        padding-bottom: 56.25%;
        padding-top: 30px;
        height: 0;
        overflow: hidden;
      }
      .video-container iframe, .video-container object, .video-container embed {
        position: absolute;
        top: 0;left: 0;
        width: 100%;
        height: 100%;
        display: inline
      }   
      #live {
        width: 80%;
        height: 100%;
        display:inline-block;
      }
      #live-chat {
        width: 20%;
        height: 100%;
        display:inline-block;
      }

  body
    head
      if isMobile
        .bgimg-2
      else
        .bgimg-1
    main
      if isMobile
        .video-container
          iframe(type="text/html" width="960" height="600" frameborder="0" allowfullscreen
            src="https://www.youtube.com/embed/SqC3AnZJ6VM?autoplay=1"
          )

        iframe(
          width='300'
          height='600'
          src="https://www.youtube.com/live_chat?v=SqC3AnZJ6VM&embed_domain=tainanverse-live.ap-northeast-1.elasticbeanstalk.com"
        )
      else 
        div#live.video-container
          iframe(type="text/html" width="1920" height="1080" style="border:none;overflow:hidden" 
                  scrolling="no" 
                  frameborder="0"
                  allowfullscreen="true" 
                  allow="autoplay; clipboard-write; encrypted-media;picture-in-picture;web-share" 
                  allowFullScreen="true"
              src="https://www.facebook.com/plugins/video.php?href=https%3A%2F%2Fwww.facebook.com%2F100074021450702%2Fvideos%2F711986010266397%2F&width=1920&show_text=true&width=560&t=0"
          )
        div#live-chat.video-container
          iframe(
            width='250'
            height='600'
            target="_top"
            src="https://www.facebook.com/plugins/video.php?href=https://www.facebook.com/live/producer/dashboard/711986010266397/COMMENTS&embed_domain=id-local.globomantics.com"
          )




